@model KillerApp.Models.GameViewModel
@using KillerApp.Objects
@{
    ViewData["Title"] = "Game";
}
<script src="~/js/SortCompanies.js"></script>
<script src="~/js/datatables.js"></script>
<link rel="stylesheet" type="text/css" href="~/css/datatables.min.css" />
<link rel="stylesheet" type="text/css" href="~/css/DataTableSearch.css" />
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.css">

<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.js"></script>
<form></form>
<div>
    <div style="float:left">
        <h2>Game</h2>
    </div>

    <div id="new-game" style="float:right">
        <br />
        @Html.ActionLink("Add Game", "AddGame")
    </div>
</div>

<div class="container-fluid">
    <table id="example" class="table table-striped table-bordered nowrap" width="100%">
        <thead>
            <tr>
                <th>Game ID</th>
                <th>Game Name</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Game)
            {
                <tr>
                    <td>@Html.DisplayFor(Model => item.ID)</td>
                    <td><a href="Game/Game/@item.ID">@Html.DisplayFor(Model => item.Name)</a></td>
                    <td>@Html.DisplayFor(Model => item.Description)</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<table id="table_id" class="display">
    <thead>
        <tr>
            <th>Column 1</th>
            <th>Column 2</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>Row 1 Data 1</td>
            <td>Row 1 Data 2</td>
        </tr>
        <tr>
            <td>Row 2 Data 1</td>
            <td>Row 2 Data 2</td>
        </tr>
    </tbody>
</table>

@section Scripts
{ 
<script>
    $(document).ready(function () {
        $('#table_id').DataTable();
    });

    $(document).ready(function () {
        var table = $('#example').DataTable({
            columnDefs: [{
                targets: 3,
                className: 'dt-body-center'
            }]
        });
    });
</script>
}



